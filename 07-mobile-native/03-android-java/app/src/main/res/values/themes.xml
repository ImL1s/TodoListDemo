<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.TodoList" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/status_bar</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Application theme with ActionBar -->
    <style name="Theme.TodoList" parent="Base.Theme.TodoList">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="actionBarStyle">@style/TodoList.ActionBar</item>
    </style>

    <!-- ActionBar style -->
    <style name="TodoList.ActionBar" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">@color/primary</item>
        <item name="titleTextStyle">@style/TodoList.ActionBar.Title</item>
    </style>

    <!-- ActionBar title style -->
    <style name="TodoList.ActionBar.Title" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- FloatingActionButton style -->
    <style name="TodoList.Fab" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/white</item>
    </style>

    <!-- CardView style -->
    <style name="TodoList.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>
</resources>
