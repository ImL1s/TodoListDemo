{
  "compilerOptions": {
    // Language and module settings
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",

    // Type checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    // Gatsby specific
    "allowJs": true,
    "noEmit": true,
    "incremental": true,

    // Path mapping (optional)
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "gatsby-*.ts"
  ],
  "exclude": [
    "node_modules",
    "public",
    ".cache"
  ]
}
