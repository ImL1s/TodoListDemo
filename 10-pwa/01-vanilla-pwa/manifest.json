    },
    {
      "src": "icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "screenshots/desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
      "src": "screenshots/mobile-1.png",
      "sizes": "540x720",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  "shortcuts": [
    {
      "name": "新增待辦事項",
      "short_name": "新增",
      "description": "快速新增一個待辦事項",
      "url": "/?action=add",
      "icons": [
        {
          "src": "icons/shortcut-add.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "查看全部",
      "short_name": "全部",
      "description": "查看所有待辦事項",
      "url": "/?filter=all",
      "icons": [
        {
          "src": "icons/shortcut-all.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "related_applications": [],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+todo",
      "url": "/?todo=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui", "browser"],
  "iarc_rating_id": "",
  "serviceworker": {
    "src": "service-worker.js",
    "scope": "/",
    "update_via_cache": "none"
  }
}
